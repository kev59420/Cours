<Window x:Class="NbrMystereWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NbrMystereWPF"
        mc:Ignorable="d"
        Title="Le nombre mystere" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="J'ai choisie un nombre entre 1 et 20 ! Trouve le !"/>
            <TextBlock x:Name="info"/>
            <TextBlock x:Name="box" Text="Nombre d'essais : 0"/>
            <TextBox x:Name="block" />
            <Button x:Name="btnValider" Content="Valider" Click="btnValider_Click"/>
            <Button x:Name="btnNouvellePartie" Content="Nouvelle Partie !" Click="btnNouvellePartie_Click"/>
        </StackPanel>
    </Grid>
</Window>
